<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fff">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_pay_icon_clock"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="12dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_mini_clock" />

            <TextView
                android:layout_marginRight="12dp"
                android:id="@+id/item_pay_txt_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="12 minutos"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_pay_icon_date"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="12dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_mini_calendar" />

            <TextView
                android:layout_marginRight="12dp"
                android:id="@+id/item_pay_txt_date"
                android:layout_width="fill_parent"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:text="23 de Junio de 2015 14:34 hrs."
                android:textColor="@color/material_blue_grey_800"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_pay_icon_pin"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="12dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_mini_pin" />

            <TextView
                android:layout_marginRight="12dp"
                android:id="@+id/item_pay_txt_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Calle Huamantla #600B. Col. Cerro Macuiltepetl Xalapa Veracruz."
                android:textColor="@color/material_blue_grey_800"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="12dp"
                android:scaleType="fitCenter"
                />

            <TextView
                android:layout_marginRight="12dp"
                android:id="@+id/item_pay_txt_payed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Pagada"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/green"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>